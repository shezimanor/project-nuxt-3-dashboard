          },
          "rules": {
            "minLength": 3
          }
        },
        "urls": {
          "type": "array",
          "items": {
            "type": "string",
            "default": "",
            "ui": {
              "label": "網址",
              "widget": "input",
              "widgetConfig": {
                "placeholder": "請輸入網址"
              }
