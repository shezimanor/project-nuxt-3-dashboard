                "rules": {
                  "required": true,
                  "maxLength": 10
                }
              },
              "comment": {
                "type": "string",
                "default": "良好",
                "ui": {
                  "label": "評價",
                  "widget": "input",
                  "widgetConfig": {
                    "placeholder": "請輸入評價"
                  }
                },
                "rules": {
                  "required": true
                }
              },
              "manyThings": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "default": "你的名字",
                      "ui": {
                        "label": "名字",
                        "widget": "input",
                        "widgetConfig": {
                          "placeholder": "請輸入名字"
                        }
                      },
                      "rules": {
                        "required": true
                      }
                    },
                    "job": {
                      "type": "string",
                      "default": "工程師",
                      "ui": {
                        "label": "工作",
                        "widget": "input",
                        "widgetConfig": {
                          "placeholder": "請輸入工作"
                        }
                      },
                      "rules": {
                        "required": true
                      }
                    }
                  }
                },
                "ui": {
                  "label": "陣列下層又是陣列",
                  "widget": "array-tabs"
                }
              }
            }
          },
          "ui": {
            "label": "其他說明",
            "widget": "array-tabs"
          },
          "rules": {
            "minLength": 3
          }
