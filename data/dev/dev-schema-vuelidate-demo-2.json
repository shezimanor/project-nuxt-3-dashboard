        "colors": {
          "type": "array",
          "default": ["紅"],
          "ui": {
            "label": "顏色",
            "widget": "multiple-select",
            "widgetConfig": {
              "options": [
                { "label": "紅", "value": "紅" },
                { "label": "綠", "value": "綠" },
                { "label": "藍", "value": "藍" },
                { "label": "黃", "value": "黃" },
                { "label": "黑", "value": "黑" },
                { "label": "白", "value": "白" }
