    "basicJSON": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "default": "Empty Title",
          "ui": {
            "label": "標題",
            "widget": "input",
            "widgetConfig": {
              "placeholder": "請輸入標題"
            }
          },
          "rules": {
            "required": true,
            "maxLength": 30
          }
        },
        "description": {
          "type": "string",
          "default": "",
          "ui": {
            "label": "簡介",
            "widget": "textarea",
            "widgetConfig": {
              "placeholder": "請輸入簡介(非必填)"
            }
          },
          "rules": {
            "maxLength": 300
          }
        }
      },
      "ui": {}
    },
    "prototypeJSON": {
      "type": "object",
      "properties": {
