{
  "type": "object",
  "properties": {
    "basicJSON": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "default": "Empty Title",
          "ui": {
            "label": "產品標題",
            "widget": "input",
            "widgetConfig": {
              "placeholder": "請輸入產品標題"
            }
          },
          "rules": {
            "required": true,
            "maxLength": 30
          }
        },
        "description": {
          "type": "string",
          "default": "",
          "ui": {
            "label": "產品標題",
            "widget": "textarea",
            "widgetConfig": {
              "placeholder": "請輸入產品描述(非必填)"
            }
          },
          "rules": {
            "maxLength": 300
          }
        }
      },
      "ui": {
        "label": "基本資訊"
      }
    },
    "prototypeJSON": {
      "type": "object",
      "properties": {
        "others": {
          "type": "array",
          "default": [
            {
              "level": "等級二",
              "comment": "普通",
              "manyThings": [
                { "name": "張雷恩", "job": "業務經理" },
                { "name": "蘇珊", "job": "副理" }
              ]
            }
          ],
          "items": {
            "type": "object",
            "properties": {
              "level": {
                "type": "string",
                "default": "等級一",
                "ui": {
                  "label": "等級",
                  "widget": "input",
                  "widgetConfig": {
                    "placeholder": "請輸入等級"
                  }
                },
                "rules": {
                  "required": true
                }
              },
              "comment": {
                "type": "string",
                "default": "良好",
                "ui": {
                  "label": "評價",
                  "widget": "input",
                  "widgetConfig": {
                    "placeholder": "請輸入評價"
                  }
                },
                "rules": {
                  "required": true
                }
              },
              "manyThings": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "default": "你的名字",
                      "ui": {
                        "label": "名字",
                        "widget": "input",
                        "widgetConfig": {
                          "placeholder": "請輸入名字"
                        }
                      },
                      "rules": {
                        "required": true
                      }
                    },
                    "job": {
                      "type": "string",
                      "default": "工程師",
                      "ui": {
                        "label": "工作",
                        "widget": "input",
                        "widgetConfig": {
                          "placeholder": "請輸入工作"
                        }
                      },
                      "rules": {
                        "required": true
                      }
                    }
                  }
                },
                "ui": {
                  "label": "陣列下層又是陣列",
                  "widget": "array-tabs"
                },
                "rules": {
                  "minLength": 3
                }
              }
            }
          },
          "ui": {
            "label": "其他說明",
            "widget": "array-tabs"
          },
          "rules": {
            "minLength": 2
          }
        },
        "colors": {
          "type": "array",
          "default": ["紅"],
          "ui": {
            "label": "顏色",
            "widget": "multiple-select",
            "widgetConfig": {
              "options": [
                { "label": "紅", "value": "紅" },
                { "label": "橙", "value": "橙" },
                { "label": "黃", "value": "黃" },
                { "label": "綠", "value": "綠" },
                { "label": "藍", "value": "藍" },
                { "label": "紫", "value": "紫" }
              ],
              "placeholder": "請輸入顏色",
              "searchablePlaceholder": "搜尋顏色"
            }
          },
          "rules": {
            "maxLength": 3
          }
        },
        "displayKey": {
          "type": "string",
          "default": "K",
          "ui": {
            "label": "代表字",
            "widget": "select",
            "widgetConfig": {
              "options": [
                { "label": "M", "value": "M" },
                { "label": "K", "value": "K" },
                { "label": "G", "value": "G" },
                { "label": "T", "value": "T" }
              ],
              "placeholder": "請選擇代表字",
              "searchablePlaceholder": "搜尋顏色"
            }
          },
          "rules": {
            "maxLength": 3
          }
        },
        "productName": {
          "type": "string",
          "default": "Empty Title",
          "ui": {
            "label": "產品標題",
            "widget": "input",
            "widgetConfig": {
              "placeholder": "請輸入產品標題"
            }
          },
          "rules": {
            "required": true,
            "maxLength": 30
          }
        },
        "productPrice": {
          "type": "number",
          "default": 100,
          "ui": {
            "label": "產品價格",
            "widget": "number",
            "widgetConfig": {
              "placeholder": "請輸入產品價格"
            }
          },
          "rules": {
            "required": true,
            "between": [30, 200]
          }
        },
        "productQuantity": {
          "type": "number",
          "default": 10,
          "ui": {
            "label": "產品數量",
            "widget": "number",
            "widgetConfig": {
              "placeholder": "請輸入產品數量"
            }
          },
          "rules": {
            "required": true,
            "sameAs": {
              "key": "productPrice",
              "label": "產品價格"
            }
          }
        },
        "isOnSale": {
          "type": "boolean",
          "default": true,
          "ui": {
            "label": "上架狀態",
            "widget": "toggle",
            "widgetConfig": {}
          }
        },
        "productOrigin": {
          "type": "array",
          "default": ["台北市"],
          "ui": {
            "label": "產品產地",
            "widget": "multiple-select",
            "widgetConfig": {
              "options": [
                { "label": "台北市", "value": "台北市" },
                { "label": "桃園市", "value": "桃園市" },
                { "label": "新竹市", "value": "新竹市" },
                { "label": "台中市", "value": "台中市" },
                { "label": "新北市", "value": "新北市" },
                { "label": "高雄市", "value": "高雄市" }
              ],
              "placeholder": "請選擇產地",
              "searchablePlaceholder": "搜尋"
            }
          },
          "rules": {
            "required": true
          }
        },
        "newUrls1": {
          "type": "array",
          "default": [{ "url": "https://www.google.com" }],
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "default": "https://www.google.com",
                "ui": {
                  "label": "網址",
                  "widget": "input",
                  "widgetConfig": {
                    "placeholder": "請輸入網址"
                  }
                },
                "rules": {
                  "required": true,
                  "url": true
                }
              }
            }
          },
          "ui": {
            "label": "多個網址(items是物件陣列)"
          },
          "rules": {
            "minLength": 3
          }
        },
        "newUrls2": {
          "type": "array",
          "default": [
            "https://www.google.com",
            "https://www.facebook.com",
            "https://www.yahoo.com"
          ],
          "items": {
            "type": "string",
            "default": "https://www.test.com",
            "ui": {
              "label": "網址",
              "widget": "input",
              "widgetConfig": {
                "placeholder": "請輸入網址"
              }
            },
            "rules": {
              "required": true,
              "url": true
            }
          },
          "ui": {
            "label": "多個網址(items是字串陣列)"
          },
          "rules": {
            "minLength": 2
          }
        }
      },
      "ui": {
        "label": "核心資料"
      }
    }
  },
  "ui": {
    "label": "表單容器"
  }
}
