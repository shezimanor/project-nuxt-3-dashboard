{
  "type": "object",
  "properties": {
    "basicJSON": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "default": "Empty Title",
          "ui": {
            "label": "產品標題",
            "widget": "input",
            "widgetConfig": {
              "placeholder": "請輸入產品標題"
            }
          },
          "rules": {
            "required": true,
            "maxLength": 30
          }
        },
        "description": {
          "type": "string",
          "default": "",
          "ui": {
            "label": "產品標題",
            "widget": "textarea",
            "widgetConfig": {
              "placeholder": "請輸入產品描述(非必填)"
            }
          },
          "rules": {
            "maxLength": 300
          }
        }
      },
      "ui": {
        "label": "基本資訊"
      }
    },
    "prototypeJSON": {
      "type": "object",
      "properties": {
        "shwocases": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "default": "未命名",
                "ui": {
                  "label": "名稱",
                  "widget": "input",
                  "widgetConfig": {
                    "placeholder": "請輸入名稱"
                  }
                },
                "rules": {
                  "required": true
                }
              },
              "image": {
                "type": "string",
                "default": "cat",
                "ui": {
                  "label": "素材",
                  "widget": "select",
                  "widgetConfig": {
                    "options": [
                      { "label": "貓", "value": "cat" },
                      { "label": "狗", "value": "dog" },
                      { "label": "鳥", "value": "bird" },
                      { "label": "魚", "value": "fish" },
                      { "label": "熊", "value": "bear" },
                      { "label": "獅", "value": "lion" },
                      { "label": "虎", "value": "tiger" },
                      { "label": "猴", "value": "monkey" },
                      { "label": "狐", "value": "fox" },
                      { "label": "狼", "value": "wolf" },
                      { "label": "熊貓", "value": "panda" }
                    ],
                    "placeholder": "請選擇素材",
                    "searchablePlaceholder": "搜尋素材"
                  }
                },
                "rules": {
                  "required": true
                }
              }
            }
          },
          "ui": {
            "label": "展示項目",
            "widget": "array-tabs"
          }
        },
        "color": {
          "type": "string",
          "default": "red",
          "ui": {
            "label": "素材",
            "widget": "select",
            "widgetConfig": {
              "options": [
                { "label": "紅色", "value": "red" },
                { "label": "橙色", "value": "orange" },
                { "label": "黃色", "value": "yellow" },
                { "label": "綠色", "value": "green" },
                { "label": "藍色", "value": "blue" },
                { "label": "紫色", "value": "purple" },
                { "label": "黑色", "value": "black" },
                { "label": "白色", "value": "white" },
                { "label": "灰色", "value": "gray" },
                { "label": "棕色", "value": "brown" }
              ],
              "placeholder": "請選擇顏色",
              "searchablePlaceholder": "搜尋顏色"
            }
          },
          "rules": {
            "required": true
          }
        },
        "views": {
          "type": "number",
          "default": 3,
          "ui": {
            "label": "播放次數",
            "widget": "range",
            "widgetConfig": {
              "min": 1,
              "max": 10
            }
          },
          "rules": {
            "required": true,
            "minValue": 1,
            "maxValue": 10
          }
        },
        "isOnSale": {
          "type": "boolean",
          "default": true,
          "ui": {
            "label": "上架狀態",
            "widget": "toggle",
            "widgetConfig": {}
          }
        }
      },
      "ui": {
        "label": "產品內容"
      }
    }
  },
  "ui": {
    "label": "表單容器"
  }
}
