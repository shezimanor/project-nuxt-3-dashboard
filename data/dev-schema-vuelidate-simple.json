{
  "type": "object",
  "properties": {
    "basicJSON": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "default": "Empty Title",
          "ui": {
            "label": "標題",
            "widget": "input",
            "widgetConfig": {
              "placeholder": "請輸入標題"
            }
          },
          "rules": {
            "required": true,
            "minLength": 3,
            "sameAs": "description"
          }
        },
        "description": {
          "type": "string",
          "default": "",
          "ui": {
            "label": "簡介",
            "widget": "textarea",
            "widgetConfig": {
              "placeholder": "請輸入簡介(非必填)"
            }
          },
          "rules": {
            "required": true,
            "minLength": 3,
            "sameAs": "title"
          }
        }
      },
      "ui": {
        "label": "基本資訊"
      }
    },
    "prototypeJSON": {
      "type": "object",
      "properties": {
        "productName": {
          "type": "string",
          "default": "Product Name",
          "ui": {
            "label": "產品標題",
            "widget": "input",
            "widgetConfig": {
              "placeholder": "請輸入產品標題"
            }
          },
          "rules": {
            "required": true,
            "maxLength": 30,
            "alphaNum": true
          }
        },
        "productPrice": {
          "type": "number",
          "default": 100,
          "ui": {
            "label": "產品價格",
            "widget": "number",
            "widgetConfig": {
              "placeholder": "請輸入產品價格"
            }
          },
          "rules": {
            "required": true,
            "integer": true,
            "between": [30, 50]
          }
        },
        "productQuantity": {
          "type": "number",
          "default": 12,
          "ui": {
            "label": "產品數量",
            "widget": "number",
            "widgetConfig": {
              "placeholder": "請輸入產品數量"
            }
          },
          "rules": {
            "required": true,
            "integer": true,
            "between": [10, 100]
          }
        },
        "productOrigin": {
          "type": "array",
          "default": ["台北市"],
          "ui": {
            "label": "產品產地",
            "widget": "multiple-select",
            "widgetConfig": {
              "options": [
                "台北市",
                "桃園市",
                "新竹市",
                "台中市",
                "新北市",
                "高雄市"
              ],
              "placeholder": "請選擇產地",
              "searchablePlaceholder": "搜尋"
            }
          },
          "rules": {
            "required": true
          }
        },
        "isOnSale": {
          "type": "boolean",
          "default": true,
          "ui": {
            "label": "上架狀態",
            "widget": "toggle",
            "widgetConfig": {}
          }
        }
      },
      "ui": {
        "label": "核心資料"
      }
    }
  }
}
